<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.allanlarangeiras.desafioorama">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_orama_foreground"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_orama_foreground"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.splash.SplashScreenActivity"
                android:theme="@style/SplashTheme"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.funds.FundsActivity" android:screenOrientation="portrait" />
        <activity android:name=".activities.fundDetail.FundDetailActivity" android:screenOrientation="portrait" />
    </application>

</manifest>